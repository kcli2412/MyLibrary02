<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.mylibrary02.AddActivity">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/add_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/add_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="書名"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/add_isbn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ISBN"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/add_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="作者"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/add_publication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="出版日期"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/add_press"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="出版社"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/add_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="類別"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/add_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="簡介"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/add_pricing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="定價"
                android:inputType="textPersonName|number" />

            <RatingBar
                android:id="@+id/add_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isIndicator="false" />

            <Button
                android:id="@+id/add_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickAdd"
                android:text="ADD" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
